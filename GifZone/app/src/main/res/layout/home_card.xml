<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_cover_height"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/thumbnail"
            android:gravity="center"
            android:paddingLeft="@dimen/home_title_padding"
            android:paddingRight="@dimen/home_title_padding"
            android:paddingStart="@dimen/home_title_padding"
            android:paddingEnd="@dimen/home_title_padding"
            android:textColor="@color/album_title"
            android:textSize="@dimen/home_title" />


    </RelativeLayout>


</LinearLayout>